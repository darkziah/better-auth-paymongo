{
  "name": "better-auth-paymongo",
  "version": "0.1.0",
  "description": "PayMongo payment gateway plugin for Better-Auth with subscription management, add-ons, and usage-based billing",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./client": {
      "import": "./dist/client.js",
      "types": "./dist/client.d.ts"
    },
    "./react": {
      "import": "./dist/react.js",
      "types": "./dist/react.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun run build:js && bun run build:types",
    "build:js": "bun build src/client.ts --outdir dist --target browser --format esm --sourcemap=external --external nanostores && bun build src/index.ts --outdir dist --target node --format esm --sourcemap=external --external ./client --external better-auth --external zod && bun build src/react.ts --outdir dist --target browser --format esm --sourcemap=external --external better-auth-paymongo/client --external react --external @nanostores/react --external nanostores",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build",
    "dev": "bun run build:js --watch"
  },
  "keywords": [
    "better-auth",
    "paymongo",
    "payments",
    "subscriptions",
    "authentication",
    "billing",
    "philippines",
    "gcash",
    "paymaya"
  ],
  "author": "darkziah",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/darkziah/better-auth-paymongo"
  },
  "homepage": "https://github.com/darkziah/better-auth-paymongo#readme",
  "bugs": {
    "url": "https://github.com/darkziah/better-auth-paymongo/issues"
  },
  "peerDependencies": {
    "better-auth": ">=1.0.0",
    "react": ">=18.0.0",
    "zod": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19.2.8",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@better-fetch/fetch": "^1.0.0",
    "@nanostores/query": "^0.3.4",
    "@nanostores/react": "^1.0.0",
    "nanostores": "^1.1.0"
  }
}